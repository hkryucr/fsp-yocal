<!DOCTYPE html>
<html>
  <head>
    <title>Yocal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel = "icon" href ="<%= image_url('yelp-favicon.png') %>" type = "image/x-icon"> 
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{Rails.application.credentials.google[:api_key]}" %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <script type="text/javascript">
      window.googleAPIKey = "<%= Rails.application.credentials.google[:api_key] %>"
    </script>

    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.2.0/zxcvbn.js"></script>

    <script type="text/javascript">
      window.yelpLogo = "<%= image_url('yelp_logo.png') %>";
      window.googleIcon = "<%= image_url('google_icon.png') %>";
      window.signupPhoto = "<%= image_url('signup_photo.png') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
